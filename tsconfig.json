// yarn run tsc --init
{
	// 포함시킬 경로
	"include": [
		"src/**/*.ts"
	],
	// 제외할 것
	"exclude": [
		"node_modules"
	],
	// 타입스크립트 옵션
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		// 경로 src로 맞춘 것
		"rootDir": "src",
		//  컴파일 된 파일들 만들어지는 경로
		"outDir": "dist",
		// 브라우저에서 소스맵 타입스크립트로 보이게 
		"sourceMap": false,
		// 주석제거
		"removeComments": true,
		// Any타입 못쓰게
		"noImplicitAny": false,
		//실험적 데코레이터
		"experimentalDecorators": true
	}
}